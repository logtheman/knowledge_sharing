
<% @questions.each do |q| %>
	<div class="row">
		<div class="question-index">
			<!-- upvote and downvote for each question -->
		  <div class="col-md-1 vote-column">
		  	Vote
		  	<%= link_to like_question_path(q), method: :put, type: "button", class: "btn btn-default btn-lg upvote" do %>
			    <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span> 
			  <% end %>
			  <%= q.cached_votes_score %>
	    	<%= link_to dislike_question_path(q), method: :put, type: "button", class: "btn btn-default btn-lg downvote" do %>
	  	    <span class="glyphicon glyphicon-hand-down" aria-hidden="true"></span> 
	  	  <% end %>
		  </div>
		  <!-- Content for each question -->
		  <div class="col-md-11">
				<h3>
					<%= link_to(question_path(q)) do %>
						<%= q.title %> 
					<% end %>	
				</h3>
				<p>
					<%= q.detail %>
				</p>
				<p>
					<%= link_to(question_path(q)) do %>
						Answers: 
					<% end %>
					<%= q.answers_count %>
					Comments: 
					<%= q.comments_count %>
						
				</p>
				
		  </div>
		</div>
	</div>
<% end %>