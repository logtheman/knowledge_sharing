

<% @questions.each do |q| %>
<div class="row">
	<div class="question-index">
		<!-- upvote and downvote for each question -->
	  <div class="col-md-1 vote-column">
	  	Votes
		  <button type="button" class="btn btn-default btn-lg">
		    <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span> 
		  </button>
		  <%= q.cached_votes_score %>
		  <button type="button" class="btn btn-default btn-lg">
		    <span class="glyphicon glyphicon-hand-down" aria-hidden="true" aria-label="downvote"></span> 
		  </button>

	  </div>
	  <!-- Content for each question -->
	  <div class="col-md-11">
			<h3>
				<%= link_to(question_path(q)) do %>
					<%= q.title %> 
				<% end %>	
			</h3>
			<p>
				<%= q.detail %>
			</p>
			<p>
				<%= link_to(question_path(q)) do %>
					Answers: 
				<% end %>
				<%= q.answers_count %>
					
			</p>
	  </div>
	</div>
</div>

<% end %>